{
  "files.exclude": {
    "globalStorage": true,
    "History": true,
    "snippets": true,
    "workspaceStorage": true,
    "*.json": false,
    "**/Thumbs.db": true
  },
  "editor.rulers": [
    91
  ],
  "[json][jsonc]": {
    "editor.rulers": [
      120,
    ],
  },
  "files.associations": {
    "*.json": "jsonc"
  },
  "json.schemas": [{
    "fileMatch": ["*.json"],
    "schema": {
      "allowTrailingCommas": true,
    },
  }],
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    "./scripts",
    "-p",
    "*_test.py"
  ],
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "scripts"
  ],
}